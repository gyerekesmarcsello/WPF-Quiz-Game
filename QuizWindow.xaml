<Window x:Class="QuizGame.QuizWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:QuizGame"
        mc:Ignorable="d"
        Title="Window2" Height="450" Width="800" Closing="Window_Closing">
    <Grid>
        <TextBlock  x:Name="mytimer" HorizontalAlignment="Left" Margin="361,37,0,0" Text="60" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="36"/>
        <StackPanel x:Name="mypanel" MouseLeftButtonDown="an1_MouseLeftButtonDown" VerticalAlignment="Center">
            <Label x:Name="question" Content="" Background="LightBlue" Margin="5"></Label>
            <Label x:Name="an1" Content="" Padding="10" HorizontalAlignment="Left" BorderThickness="1" Margin="5"></Label>
            <Label  x:Name="an2" Content="" Padding="10" HorizontalAlignment="Left" BorderThickness="1" Margin="5"></Label>
            <Label x:Name="an3" Content="" Padding="10" HorizontalAlignment="Left" BorderThickness="1" Margin="5"></Label>
            <Label  x:Name="an4" Content="" Padding="10" HorizontalAlignment="Left" BorderThickness="1" Margin="5"></Label>
        </StackPanel>
    </Grid>
</Window>
